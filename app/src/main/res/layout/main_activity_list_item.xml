<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">



        <TextView
            android:id="@+id/tvCardListName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/tvIndex_main"
            android:layout_toRightOf="@+id/tvIndex_main"
            android:text="Card List Name"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/tvCardCount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/tvIndex_main"
            android:layout_toRightOf="@+id/tvIndex_main"
            android:layout_below="@+id/tvCardListName"
            android:paddingLeft="10sp"
            android:text="Card Count: x"
            android:textSize="15sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="14dp"
            android:layout_marginRight="14dp"
            app:srcCompat="@drawable/ic_disclosure_indicator_black"
            tools:ignore="ContentDescription" />
        <TextView
            android:id="@+id/tvIndex_main"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:minEms="1"
            android:gravity="center"
            android:paddingLeft="5sp"
            android:text="1"
            android:textSize="40sp"/>

    </RelativeLayout>
</LinearLayout>